{
  "name": "datto-rmm",
  "private": true,
  "description": "Complete toolkit for Datto RMM: MCP server, API clients, and developer tools",
  "author": "josh-fisher",
  "license": "MIT",
  "homepage": "https://github.com/josh-fisher/datto-rmm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josh-fisher/datto-rmm.git"
  },
  "bugs": {
    "url": "https://github.com/josh-fisher/datto-rmm/issues"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "generate:api": "bash tooling/scripts/generate-api-clients.sh",
    "sync:openapi": "bash tooling/scripts/sync-openapi-spec.sh",
    "setup:claude": "bash tooling/scripts/setup-claude-files.sh",
    "validate:ai-docs": "bash tooling/scripts/validate-ai-docs.sh",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  }
}
